function checar()
{
	switch (flag){
	case 0:playconejop31();
	break;
	case 1:playconejop32();
	break;
	case 2:playconejop33();
	break;
	case 3:playconejop34();
	break;
	case 4:playconejop35();
	break;
	case 5:playconejop36();
	break;
	case 6:final();
	break;
	default: final();
	}
}
